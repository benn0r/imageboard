	</div>
</div>
<?php endforeach; ?>
<?php if ($this->active < $this->total): ?>
<div class="comment-loader">
	<a href="" onclick="loadComments(); return false;"><?php echo $this->t->t('thread/loadcomments') ?></a>
</div>
<?php endif; ?>

